<% @pins.each do |pin| %>
    <div class="pin pin--panel panel panel-default">
      <%= image_tag pin.image.url(:medium) %>
      <div class="pin--panel--description">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
      </div>
      <div class="btn-group">
        <button type="button" class="btn btn-default"><%= link_to 'Show', pin %></button>
        <% if pin.user == current_user %>
            <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_pin_path(pin) %></button>
            <button type="button" class="btn btn-default"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        <% end %>
      </div>
    </div>
<% end %>

